{
  "name": "Snakebite",
  "version": "1.9.3",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Good for a logo up to 600 x 140 pixels"
    },
    {
      "variable": "background",
      "label": "Background Image",
      "description": "Optional (repeating pattern suggested)"
    },
    {
      "variable": "accent",
      "label": "Secondary Background Image",
      "description": "Optional (repeating pattern suggested)"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow",
      "label": "Home Slideshow",
      "description": "1400px by 700px images recommended"
    }
  ],
  "preset_styles": {
    "preview": {
      "title_font": "header_font",
      "body_font": "primary_font",
      "text_color": "primary_color",
      "background_color": "background_color"
    },
    "presets": [
      {
        "group_name": "Classic",
        "styles": [
          {
            "style_name": "Classic #1",
            "fonts": {
              "header_font": "DM Sans",
              "text_font": "DM Sans"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "primary_color": "#111111",
              "highlight_color": "#88ECFF",
              "accent_color": "#F3F3F5",
              "product_status_badge_text_color_primary": "#88ECFF",
              "product_status_badge_background_color_primary": "#111111",
              "product_status_badge_text_color_secondary": "#111111",
              "product_status_badge_background_color_secondary": "#CDCDCD"
            }
          }
        ]
      },
      {
        "group_name": "Playful",
        "styles": [
          {
            "style_name": "Playful #1",
            "fonts": {
              "header_font": "Syne",
              "text_font": "Syne"
            },
            "colors": {
              "background_color": "#CEFF66",
              "primary_color": "#000000",
              "highlight_color": "#FFFFFF",
              "accent_color": "#A6F304",
              "product_status_badge_text_color_primary": "#A6F304",
              "product_status_badge_background_color_primary": "#000000",
              "product_status_badge_text_color_secondary": "#000000",
              "product_status_badge_background_color_secondary": "#CDCDCD"
            }
          },
          {
            "style_name": "Playful #2",
            "fonts": {
              "header_font": "Concert One",
              "text_font": "Dosis"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "primary_color": "#F90081",
              "highlight_color": "#F6FF20",
              "accent_color": "#9DFFFC",
              "product_status_badge_text_color_primary": "#F6FF20",
              "product_status_badge_background_color_primary": "#111111",
              "product_status_badge_text_color_secondary": "#111111",
              "product_status_badge_background_color_secondary": "#CDCDCD"
            }
          }
        ]
      },
      {
        "group_name": "Natural",
        "styles": [
          {
            "style_name": "Natural #1",
            "fonts": {
              "header_font": "Prata",
              "text_font": "Source Sans Pro"
            },
            "colors": {
              "background_color": "#F8F8F8",
              "primary_color": "#0F1B27",
              "highlight_color": "#EBE7E7",
              "accent_color": "#DBD1D1",
              "product_status_badge_text_color_primary": "#F1BB5D",
              "product_status_badge_background_color_primary": "#111111",
              "product_status_badge_text_color_secondary": "#111111",
              "product_status_badge_background_color_secondary": "#CDCDCD"
            }
          }
        ]
      }
    ]
  },
  "fonts": [
    {
      "variable": "header_font",
      "label": "Header Font",
      "default": "DM Sans"
    },
    {
      "variable": "text_font",
      "label": "Text Font",
      "default": "DM Sans"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "primary_color",
      "label": "Primary",
      "default": "#F90081"
    },
    {
      "variable": "highlight_color",
      "label": "Highlight",
      "default": "#F6FF20"
    },
    {
      "variable": "accent_color",
      "label": "Accent",
      "default": "#9DFFFC"
    },
    {
      "variable": "product_status_badge_text_color_primary",
      "label": "Product status badge text (primary)",
      "default": "#F6FF20"
    },
    {
      "variable": "product_status_badge_background_color_primary",
      "label": "Product status badge background (primary)",
      "default": "#111111"
    },
    {
      "variable": "product_status_badge_text_color_secondary",
      "label": "Product status badge text (secondary)",
      "default": "#111111"
    },
    {
      "variable": "product_status_badge_background_color_secondary",
      "label": "Product status badge background (secondary)",
      "default": "#CDCDCD"
    }

  ],
  "options": [
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "product_slideshows",
      "label": "Enable product slideshows",
      "type": "boolean",
      "default": true,
      "description": "Displays product images as a slideshow instead of stacked images"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products featured on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 36,
      "description": "The number of products shown per page"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: https://instagram.com/bigcartel"
    },
    {
      "variable": "tiktok_url",
      "label": "TikTok URL",
      "type": "text",
      "description": "Ex: https://tiktok.com/@bigcartelofficial"
    },
    {
      "variable": "bluesky_url",
      "label": "Bluesky URL",
      "type": "text",
      "description": "Ex: https://bsky.app/profile/bigcartel.com"
    },
    {
      "variable": "threads_url",
      "label": "Threads URL",
      "type": "text",
      "description": "Ex: https://threads.net/@bigcartel"
    },
    {
      "variable": "twitter_url",
      "label": "X URL",
      "type": "text",
      "description": "Ex: https://x.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: https://facebook.com/bigcartel"
    },
    {
      "variable": "snapchat_url",
      "label": "Snapchat URL",
      "type": "text",
      "description": "Ex: https://snapchat.com/add/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: https://pinterest.com/big_cartel"
    },
    {
      "variable": "youtube_url",
      "label": "YouTube URL",
      "type": "text",
      "description": "Ex: https://youtube.com/@BigCartelDotCom"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: https://bigcartel.tumblr.com"
    },
    {
      "variable": "bandcamp_url",
      "label": "Bandcamp URL",
      "type": "text",
      "description": "Ex: https://bigcartel.bandcamp.com"
    }
  ],
  "checkout": {
    "optimize_legibility": true,
    "antialias_text": true,
    "content_width": "700px",
    "header_image": "{{logo}}",
    "header_image_max_width": "300px",
    "header_image_max_height": "70px",
    "background_color": "{{background_color}}",
    "background_image": "none",
    "title_font": "{{header_font}}",
    "title_color": "{{primary_color}}",
    "title_background_color": "{{background_color}}",
    "title_vertical_padding": "40px",
    "content_background_color": "{{background_color}}",
    "content_header_background_color": "{{background_color}}",
    "content_color": "{{primary_color}}",
    "content_header_color": "{{primary_color}}",
    "step_header_color": "{{primary_color}}",
    "step_inactive_header_color": "{{primary_color}}",
    "content_border_width": "0px",
    "error_background_color": "#950f1e",
    "error_color": "#ffffff",
    "error_border_radius": "0",
    "error_border_color": "#950f1e",
    "step_border_style": "solid",
    "step_border_color": "{{primary_color}}",
    "step_border_width": "3px",
    "step_background_color": "{{background_color}}",
    "step_inactive_background_color": "{{background_color}}",
    "step_header_font": "{{text_font}}",
    "body_font": "{{text_font}}",
    "body_font_size": "16px",
    "input_font": "{{text_font}}",
  	"input_focus_color": "#000000",
  	"input_focus_background_color": "#ffffff",
  	"input_focus_border_color": "#111111",
  	"input_error_border_color": "#950f1e",
  	"input_color": "#000000",
  	"input_error_color": "#000000",
  	"input_border_color": "#888888",
  	"input_background_color": "#ffffff",
  	"input_error_background_color": "#ffffff",
    "input_border_width": "3px",
    "button_font": "{{text_font}}",
    "button_color": "{{primary_color}}",
    "button_background_color": "{{background_color}}",
    "button_border_width": "3px",
    "button_border_color": "{{primary_color}}",
    "button_hover_background_color": "{{primary_color}}",
    "button_hover_border_color": "{{primary_color}}",
    "button_hover_color": "{{background_color}}",
    "summary_color": "{{primary_color}}",
    "summary_secondary_color": "{{primary_color}}",
    "summary_submit_border_color": "{{primary_color}}",
    "summary_item_border_color": "{{primary_color}}",
    "summary_item_border_width": "3px",
    "summary_item_list_border_color": "{{primary_color}}",
    "summary_item_list_border_width": "3px",
    "link_color": "{{primary_color}}",
    "link_hover_color": "{{primary_color}}"
  }
}
