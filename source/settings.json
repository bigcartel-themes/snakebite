{
  "name": "Snakebite",
  "version": "1.3.4",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Good for a logo up to 600 x 140 pixels",
      "default": "snakebite-logo.png"
    },
    {
      "variable": "background",
      "label": "Background Image",
      "description": "Optional (repeating pattern suggested)"
    },
    {
      "variable": "accent",
      "label": "Secondary Background Image",
      "description": "Optional (repeating pattern suggested)"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow",
      "label": "Home Slideshow",
      "description": "1400px by 700px images recommended",
      "defaults": [
        "snakebite-slide-1.jpg",
        "snakebite-slide-2.jpg",
        "snakebite-slide-3.jpg"
      ]
    }
  ],
  "fonts": [
    {
      "variable": "header_font",
      "label": "Header Font",
      "default": "Cutive"
    },
    {
      "variable": "text_font",
      "label": "Text Font",
      "default": "Montserrat"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "primary_color",
      "label": "Primary Color",
      "default": "#3936E0"
    },
    {
      "variable": "highlight_color",
      "label": "Highlight Color",
      "default": "#FFFF00"
    },
    {
      "variable": "accent_color",
      "label": "Accent Color",
      "default": "#FFEAEA"
    }
  ],
  "options": [
    {
      "variable": "product_slideshows",
      "label": "Enable product slideshows",
      "type": "boolean",
      "default": true,
      "description": "Displays product images as a slideshow instead of stacked images"
    },
    {
      "variable": "show_social",
      "label": "Show social media buttons",
      "type": "boolean",
      "default": true,
      "description": "Adds social media share buttons to product pages"
    },
    {
      "variable": "show_view_badges",
      "label": "Show view badges",
      "type": "boolean",
      "default": true,
      "description": "Adds circular \"view product\" badges on top of product thumbnails"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 15,
      "description": "The number of products shown per page"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: http://facebook.com/bigcartel"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: http://bigcartel.tumblr.com"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: http://instagram.com/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: http://pinterest.com/bigcartel"
    }
  ],
  "checkout": {
    "optimize_legibility": true,
    "antialias_text": true,
    "content_width": "700px",
    "header_image": "{{logo}}",
    "header_image_max_width": "300px",
    "header_image_max_height": "70px",
    "background_color": "{{background_color}}",
    "background_image": "none",
    "title_font": "{{header_font}}",
    "title_color": "{{primary_color}}",
    "title_background_color": "{{background_color}}",
    "title_vertical_padding": "40px",
    "content_background_color": "{{background_color}}",
    "content_header_background_color": "{{background_color}}",
    "content_color": "{{primary_color}}",
    "content_header_color": "{{primary_color}}",
    "step_header_color": "{{primary_color}}",
    "step_inactive_header_color": "{{primary_color}}",
    "content_border_width": "0px",
    "error_background_color": "#ea4859",
    "error_color": "#ffffff",
    "error_border_radius": "0",
    "error_border_color": "#ea4859",
    "step_border_style": "solid",
    "step_border_color": "{{primary_color}}",
    "step_border_width": "3px",
    "step_background_color": "{{background_color}}",
    "step_inactive_background_color": "{{background_color}}",
    "step_header_font": "{{text_font}}",
    "body_font": "{{text_font}}",
    "input_font": "{{text_font}}",
  	"input_focus_color": "#000000",
  	"input_focus_background_color": "#ffffff",
  	"input_focus_border_color": "#bfbfbf",
  	"input_error_border_color": "#ea4859",
  	"input_color": "#000000",
  	"input_error_color": "#000000",
  	"input_border_color": "#bfbfbf",
  	"input_background_color": "#ffffff",
  	"input_error_background_color": "#ffffff",
    "input_border_width": "3px",
    "button_font": "{{text_font}}",
    "button_color": "{{primary_color}}",
    "button_background_color": "{{background_color}}",
    "button_border_width": "3px",
    "button_border_color": "{{primary_color}}",
    "button_hover_background_color": "{{primary_color}}",
    "button_hover_border_color": "{{primary_color}}",
    "button_hover_color": "{{background_color}}",
    "summary_color": "{{primary_color}}",
    "summary_secondary_color": "{{primary_color}}",
    "summary_submit_border_color": "#bcbcbc",
    "summary_item_border_color": "{{primary_color}}",
    "summary_item_border_width": "3px",
    "summary_item_list_border_color": "{{primary_color}}",
    "summary_item_list_border_width": "3px",
    "link_color": "{{primary_color}}",
    "link_hover_color": "#bcbcbc"
  }
}
